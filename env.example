# Example environment configuration for EVM Faucet
# Copy this file to .env and update with your values

# Required: Private key of the faucet account (without 0x prefix)
# WARNING: Never commit your actual private key to version control!
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# EVM Network Configuration
NODE=https://ethereum-sepolia-rpc.publicnode.com
CHAIN_ID=11155111
CHAIN=Sepolia

# Token Configuration
DENOM=ETH
AMOUNT=0.1
EXPONENT=18

# Rate Limiting
DAILY_LIMIT=10
BATCH_LIMIT=5
BATCH_INTERVAL=10s

# Server Configuration
PORT=8081
LOG_LEVEL=Info

# Security
BLACKLIST=0x1234567890123456789012345678901234567890,0xabcdefabcdefabcdefabcdefabcdefabcdefabcd

# UI Configuration
DISPLAY_TOKENS=true
